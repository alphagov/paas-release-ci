<% repo_name = File.basename(uri,'.git') %>
- name: <%= repo_name %>-<%= branch_name %>
  type: git
  source:
    uri: <%= uri %>
    branch: <%= branch_name %>

- name: semver-<%= branch_name %>
  type: semver-iam
  source:
    bucket: <%= repo_name %>-state
    region_name: eu-west-1
    key: release-version-<%= branch_name %>
    initial_version: 0.0.0
